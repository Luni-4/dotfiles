#!/bin/sh

[ -z $1 ] || cd $1

while read -r name
do
    [ -d .git ] && git config --local user.name "$name"
done <~/name.txt

# Close all opened windows and sessions
tmux kill-session -t 0 > /dev/null 2>&1

tmux new-session -d
tmux new-window
[ -z $2 ] || tmux rename-window $2
tmux new-window
[ -z $2 ] || tmux rename-window $2
tmux select-window -t 1
tmux -2 attach-session -d
